class Mascota:
    def __init__(self, nombre, especie, raza, edad, precio):
        self.nombre = nombre
        self.especie = especie
        self.raza = raza
        self.edad = edad
        self.precio = precio

    def __str__(self):
        return f"Nombre: {self.nombre}, Especie: {self.especie}, Raza: {self.raza}, Edad: {self.edad}, Precio: {self.precio}"

class Tienda:
    def __init__(self):
        self.inventario = []

    def agregar_mascota(self, mascota):
        self.inventario.append(mascota)

    def buscar_mascota(self, nombre):
        for mascota in self.inventario:
            if mascota.nombre == nombre:
                return mascota
        return None

    def calcular_valor_total(self):
        total = 0
        for mascota in self.inventario:
            total += mascota.precio
        return total

if __name__ == "__main__":
    tienda = Tienda()

    while True:
        print("\nOpciones:")
        print("1. Agregar una nueva mascota")
        print("2. Buscar una mascota")
        print("3. Calcular el valor total del inventario")
        print("4. Salir")

        opcion = int(input("Ingrese una opción: "))

        if opcion == 1:
            nombre = input("Ingrese el nombre de la mascota: ")
            especie = input("Ingrese la especie: ")
            raza = input("Ingrese la raza: ")
            edad = int(input("Ingrese la edad: "))
            precio = float(input("Ingrese el precio: "))
            nueva_mascota = Mascota(nombre, especie, raza, edad, precio)
            tienda.agregar_mascota(nueva_mascota)
        elif opcion == 2:
            nombre = input("Ingrese el nombre de la mascota a buscar: ")
            mascota_encontrada = tienda.buscar_mascota(nombre)
            if mascota_encontrada:
                print(mascota_encontrada)
            else:
                print("Mascota no encontrada.")
        elif opcion == 3:
            valor_total = tienda.calcular_valor_total()
            print(f"El valor total del inventario es: {valor_total}")
        elif opcion == 4:
            break
        else:
            print("Opción inválida.")
